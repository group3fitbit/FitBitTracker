<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94D7E4"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView
            android:text="@string/dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="0"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:onClick="test" >

                <TextView
                    android:text="999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_steps"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:id="@+id/imageView_dashboard_steps"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/steps" />

                <TextView
                    android:text="@string/dashboard_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginLeft="5dp">
                <TextView
                    android:text="6.3 Miles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_distance"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/distance"
                    android:id="@+id/imageView_dashboard_distance"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginRight="5dp">

                <TextView
                    android:text="999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_calories"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/calories"
                    android:id="@+id/imageView_dashboard_calories"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginLeft="5dp">
                <TextView
                    android:text="62"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_avrgHeartrate"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/heart"
                    android:id="@+id/imageView_dashboard_avrgHeartrate"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_avrgHeartrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginRight="5dp">

                <TextView
                    android:text="42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_minHeartrate"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/heart_min"
                    android:id="@+id/imageView_dashboard_minHeartrate"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_minHeartrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginLeft="5dp">
                <TextView
                    android:text="169"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_maxHeartrate"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/heart_max"
                    android:id="@+id/imageView_dashboard_maxHeartrate"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_maxHeartrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginRight="5dp">

                <TextView
                    android:text="11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_elevation"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/stairs"
                    android:id="@+id/imageView_dashboard_elevation"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_elevation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:layout_marginLeft="5dp">
                <TextView
                    android:text="8h 22m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dashboard_timeActive"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />


                <ImageView
                    android:src="@drawable/heart"
                    android:id="@+id/imageView_dashboard_timeActive"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/dashboard_timeActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>